{
  "compilerOptions": {
    "target": "ES6",                  // Define a versão do JavaScript alvo
    "module": "commonjs",             // Usa o sistema de módulos CommonJS
    "outDir": "./dist",               // Saída dos arquivos compilados
    "rootDir": "./src",               // Diretório raiz do código fonte
    "strict": true,                   // Ativa verificação estrita de tipos
    "esModuleInterop": true,          // Habilita interoperabilidade com módulos ES
    "typeRoots": ["./node_modules/@types", "./src/types"], // Inclui tipos personalizados
    "skipLibCheck": true              // Ignora verificação de tipos das bibliotecas
  },
  "include": ["src/**/*.ts"],         // Inclui todos os arquivos TypeScript em `src`
  "exclude": ["node_modules"]         // Exclui `node_modules`
}
